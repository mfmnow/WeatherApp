
@{
    ViewBag.Title = "Weather Inquiry Form";
}
@model IAsset.Tests.MFM.Contracts.IHomeViewModel

<div class="container">
    <h1 class="well">Weather Inquiry Form</h1>
    <div class="col-lg-12 well">
        <div class="row">
            <form>
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <label>Select Country</label>
                            @Html.DropDownList("Country", new SelectList(Model.Countries, "Value", "Value"), new { @class = "form-control", onchange= "IAsset.MFM.ShowHideCity();" })
                        </div>
                    </div>  
                    <div class="row" id="CityRow" style="display:none;">
                        <div class="col-sm-12 form-group">
                            <label>Select City</label>
                            <select id="City" class="form-control" onchange= "IAsset.MFM.ShowWeatherDetails();"></select>
                            <div id="CitiesLoading">Loading Cities...</div>
                        </div>
                    </div>  
                </div>
            </form>
        </div>
    </div>
    <div class="row" style="display:none;" id="WeatherCard">
        <div class="col">
            <div class="weather-card one">
                <div class="top">
                    <div class="wrapper">
                        <div class="mynav">
                            <a href="javascript:;"><span class="lnr lnr-chevron-left"></span></a>
                            <a href="javascript:;"><span class="lnr lnr-cog"></span></a>
                        </div>
                        <div class="datetime"><span class="datetime-value"></span></div>
                        <h1 class="heading">
                            <div class="heading-icon"></div>
                            <div class="heading-value"></div>
                        </h1>
                        <h3 class="location"></h3>
                        <p class="temp">
                            <span class="temp-value"></span>
                            <span class="deg">0</span>
                            <a href="javascript:;"><span class="temp-type">C</span></a>
                        </p>
                        <p class="temp mintemp">
                            Min: <span class="mintemp-value"></span> <sup>0</sup><span>C</span>
                        </p>
                        <p class="temp maxtemp">
                            Max: <span class="maxtemp-value"></span> <sup>0</sup><span>C</span>
                        </p>
                    </div>
                </div>
                <div class="bottom">
                    <div class="wrapper">
                        <ul class="forecast">
                            <span class="lnr lnr-chevron-up go-up"></span>
                            <li class="active">
                                <span class="date">Wind</span>
                                <span class="lnr lnr-sun condition">
                                    <span class="wind"></span>
                                </span>
                            </li>
                            <li class="active">
                                <span class="date">Dew Point</span>
                                <span class="lnr lnr-sun condition">
                                    <span class="dewpoint"></span>
                                </span>
                            </li>
                            <li class="active">
                                <span class="date">Relative Humidity</span>
                                <span class="lnr lnr-sun condition">
                                    <span class="relativehumidity"></span>
                                </span>
                            </li>
                            <li class="active">
                                <span class="date">Pressure</span>
                                <span class="lnr lnr-sun condition">
                                    <span class="pressure"></span>
                                </span>
                            </li>
                            <li class="active">
                                <span class="date">Visibility</span>
                                <span class="lnr lnr-sun condition">
                                    <span class="visibility-value"></span>
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>        
    </div>
</div>

@section PageSpecificJS
{
    <script src="~/Scripts/IAsset.Test.MFM/Weather.js"></script>
}

